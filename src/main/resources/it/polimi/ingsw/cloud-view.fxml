<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="cloudPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.gui.GUICloudController">
    <children>
        <ImageView fx:id="cloudBackground" fitHeight="105.0" fitWidth="123.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../assets/table/cloud1.png" />
            </image>
        </ImageView>
        <ImageView fx:id="student1" fitHeight="32.0" fitWidth="32.0" layoutX="18.0" layoutY="37.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../assets/students/blue.png" />
            </image>
        </ImageView>
        <ImageView fx:id="student2" fitHeight="32.0" fitWidth="32.0" layoutX="37.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../assets/students/green.png" />
            </image>
        </ImageView>
        <ImageView fx:id="student3" fitHeight="32.0" fitWidth="32.0" layoutX="56.0" layoutY="37.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../assets/students/pink.png" />
            </image>
        </ImageView>
        <ImageView fx:id="outline" fitHeight="105.0" fitWidth="123.0" onMouseClicked="#selectCloud" onMouseEntered="#highlightCloud" onMouseExited="#unhighlightCloud" opacity="0.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../assets/outlines/cloud.png" />
            </image>
        </ImageView>
      <ImageView fx:id="student4" fitHeight="32.0" fitWidth="32.0" layoutX="37.0" layoutY="64.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../assets/students/pink.png" />
         </image>
      </ImageView>
    </children>
</AnchorPane>
