<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.gui.GUIPowerController">

    <ImageView fx:id="powerCard" fitHeight="100.0" fitWidth="68.0">
        <Image url="@../../../assets/characterCards/edited/centaur_edited.png" />
    </ImageView>
    <Label fx:id="cost" layoutX="6.0" layoutY="2.0" text="2" textFill="WHITE">
        <font>
            <Font name="System Bold" />
        </font>
    </Label>
   <ImageView fx:id="outline" fitHeight="100.0" fitWidth="68.0" opacity="0.0" pickOnBounds="true" preserveRatio="true" onMouseClicked="#selectPower" onMouseEntered="#highlightPower" onMouseExited="#unhighlightPower">
      <image>
         <Image url="@../../../assets/outlines/card.png" />
      </image>
   </ImageView>

</AnchorPane>
